{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals":true,
    "outDir": "dist",
    "strict": true,
    "types": ["node","vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "scripts": ["src/scripts"]
    }
  },
  "files": ["src/shims-vue.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
